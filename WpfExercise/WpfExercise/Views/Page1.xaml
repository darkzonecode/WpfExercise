<Page x:Class="WpfExercise.Views.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfExercise.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <StackPanel HorizontalAlignment="Center" Height="206"  VerticalAlignment="Center" Width="335" >

            <TextBlock Text="Philips WPF Exercise" FontSize="22" HorizontalAlignment="Center"/>

            <TextBlock Text="Enter your name:"/>
            <TextBox x:Name="TxtBoxUserName"/>

            <Button x:Name="BtnClearName" Content="Clear" Click="BtnClearName_Click"/>
            <Button x:Name="BtnNextToSecondPage" Content="Next Page" Click="BtnNextToSecondPage_Click"/>
        </StackPanel>

    </Grid>
</Page>
